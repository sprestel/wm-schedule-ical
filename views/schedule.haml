%table.table.table-striped.table-hover
  %thead
    %tr
      %th #
      %th Game
      %th Kickoff
      %th Location
  %tbody
  - @games.each_with_index do |game, index|
    %tr
      %td= index+1
      %td= game.title
      %td= game.kickoff.localtime.strftime("%Y-%m-%d %H:%M")
      %td= game.location